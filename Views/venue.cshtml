@{
	Layout="Shared/_Layout.cshtml";
}

<h1>Venue and hosted Bands entry</h1>
<h2>Venue: @Model.Name</h2>
<hr />
@if (@Model.GetBands().Count != 0)
{
  <h4>This venue is enrolled in these bands:</h4>
  <ul>
    @foreach (var band in @Model.GetBands())
    {
      <li><a href="/band/@band.Id">@band.Name</a></li>
    }
  </ul>
}
else
{
	<h4>This venue is not enrolled in any bands.</h4>
}
